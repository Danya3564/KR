<Window x:Class="KR.InterfaceRabot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KR"
        mc:Ignorable="d"
        Title="InterfaceRabot" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="20" FontSize="25"> <Bold>Акватория - личная страница</Bold></TextBlock>

        <TextBlock FontSize="15" Text="Укажите бокс для работы:" Margin="10,38,70,42" Grid.Row="1"/>
        <TextBox Margin="165,5,485,5" Width="100" Height="20" Grid.Row="1"/>

        <Button FontSize="15" Content="Начать смену" Grid.Row="2" Margin="0,0,0,-248" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Blue" Foreground="White"/>

        <Button FontSize="15" Content="Выйти" Grid.Row="2" Margin="0,0,10,-248" Width="150" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Blue" Foreground="White"/>
    </Grid>
</Window>
