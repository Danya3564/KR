<Window x:Class="KR.RabotnikVhod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KR"
        mc:Ignorable="d"
        Title="RabotnikVhod" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="5" FontSize="25"> <Bold>Акватория - вход в систему</Bold></TextBlock>

        <TextBlock FontSize="15" Text="Введите логин:" Margin="5" Grid.Row="2" />
        <TextBox Margin="101,5,299,5" Width="350" Grid.Row="2"/>

        <TextBlock FontSize="15" Text="Введите пароль:" Margin="5" Grid.Row="3"/>
        <PasswordBox Grid.Row="3" Margin="101,5,299,5" Width="350"/>

        <Button FontSize="15" Content="Войти" Grid.Row="4" Margin="5" Width="150" Height="40" HorizontalAlignment="Left" Background="Blue" Foreground="White"/>
    </Grid>
</Window>
