<Window x:Class="KR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Bisque">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/Image1.png" Stretch="Fill"/>

        <StackPanel Margin="10,150,10,150" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Orientation="Vertical">

            <Button x:Name="UserPage" Height="30" Margin="5" Background="Blue" Foreground="White">Пользователь</Button>
            <Button x:Name="EmployeePage"  Height="30" Margin="5" Background="Blue" Foreground="White">Работник</Button>
            <Button Height="30" Margin="5" Background="Blue" Foreground="White">Администратор</Button>

        </StackPanel>
    </Grid>
</Window>
